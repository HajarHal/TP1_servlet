<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>MaWebAppSecurisee</display-name>

    <!-- Configuration des Servlets -->
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>exple1.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- Contrainte de sécurité -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>GreetingServlet</web-resource-name>
            <url-pattern>/hello</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Configuration du mécanisme d'authentification -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Tomcat Realm</realm-name>
    </login-config>

    <!-- Configuration du gestionnaire d'erreurs -->
    <error-page>
        <!-- Gestion de l'erreur 404 (Not Found) -->
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    
    <error-page>
        <!-- Gestion de l'erreur 500 (Internal Server Error) -->
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

    <!-- Filtre de liste noire -->
    <filter>
        <filter-name>BlacklistFilter</filter-name>
        <filter-class>exple1.BlacklistFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BlacklistFilter</filter-name>
        <url-pattern>/hello</url-pattern>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>

</web-app>
